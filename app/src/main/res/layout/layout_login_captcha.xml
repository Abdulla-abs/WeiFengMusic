<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="right"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_margin_14dp"
        android:text="@string/login"
        android:textSize="@dimen/toolbar_title_size" />

    <TextView
        android:id="@+id/login_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin_14dp"
        android:text="@string/user"
        android:textSize="@dimen/title_text_size" />

    <EditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/view_margin_14dp"
        android:background="@drawable/round_bg"
        android:inputType="phone"
        android:paddingLeft="@dimen/view_margin_14dp" />

    <TextView
        android:id="@+id/login_pass_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin_14dp"
        android:text="@string/captcha"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_margin="@dimen/view_margin_14dp"
            android:background="@drawable/round_bg"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/view_margin_14dp" />

        <Button
            android:id="@+id/bt_request_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/but_text_color"
            android:textAllCaps="false"
            android:text="@string/request_captcha" />

    </LinearLayout>

    <Button
        android:id="@+id/login_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_14dp"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/but_text_color" />

</LinearLayout>

